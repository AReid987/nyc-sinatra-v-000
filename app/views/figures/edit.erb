<form action="/figures/<%= @figure.id %>" method="POST">

    <h3>Edit <%= @figure.name %>:</h3>

    <label>Figure Name:</label>
    <input id="figure_name" type="text" name="figure[name]"></input>
    <br></br>

    <label>Choose a Title:</label>
    <br></br>

    <% @titles.each do |title| %>
    <input id="title_<%= title.id %>"type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></input>
    <% end %>

  <br></br>
    <input type="submit" value="Edit Figure"></input>
</form>
